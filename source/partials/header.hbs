{{!-- partials/header.hbs --}}
<header class="page__header">
  <nav class="page__navigation burger-menu">
    <div class="logo logo--header burger-menu__logo">
      <a{{#unless index-page}} href="index.html"{{/unless}} class="logo__link">
        <picture class="logo__icon">
           {{!-- <source media="(min-width: 1200px)" srcset="./img/logo-desktop.svg"> --}}
           {{!-- <source media="(min-width: 768px)" srcset="./img/logo-tablet.svg"> --}}
           <img class="logo__img" src="./img/logo-mobile.svg" alt="Cat Energy logo" width="192" height="38">
        </picture>
      </a>
    </div>
    <button class="burger-menu__toggle-btn burger-menu__toggle-btn--nojs">
      <span class="ie-sucks visually-hidden">показать меню</span>
    </button>
    <ul class="burger-menu__list burger-menu__list--nojs">
      <li class="burger-menu__item">
        <a class="burger-menu__link"{{#unless index-page}} href="index.html"{{/unless}}>Главная</a>
      </li>
      <li class="burger-menu__item">
        <a class="burger-menu__link"{{#unless catalog-page}} href="catalog.html"{{/unless}}>Каталог продукции</a>
      </li>
      <li class="burger-menu__item">
        <a class="burger-menu__link"{{#unless program-page}} href="program.html"{{/unless}}>Подбор программы</a>
      </li>
    </ul>
  </nav>
</header>
